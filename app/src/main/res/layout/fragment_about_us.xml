<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.AboutUsFragment"
    android:background="@drawable/background_new">

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/devText"
        android:layout_height="wrap_content"
        android:text="Developers :"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="@color/btnSignUp"/>

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="65dp"
        android:orientation="vertical"
        android:padding="20dp">

        <ImageView
            android:id="@+id/person_1_img"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:adjustViewBounds="true"
            android:background="@drawable/developer1"
            android:minHeight="1dp"
            android:minWidth="1dp"
            android:scaleType="fitCenter" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:text="Palak Arora"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18dp"
            android:textStyle="italic" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/layout1"
        android:layout_gravity="center"
        android:layout_marginBottom="44dp"
        android:orientation="vertical"
        android:padding="20dp">

        <ImageView
            android:id="@+id/person_2_img"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/developer2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:text="Anjali Sharma"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18dp"
            android:textStyle="italic" />

    </LinearLayout>

</RelativeLayout>